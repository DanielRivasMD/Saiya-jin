####################################################################################################

_default:
  @just --list

####################################################################################################

# print justfile
[group('just')]
@show:
  bat .justfile --language make

####################################################################################################

# edit justfile
[group('just')]
@edit:
  micro .justfile

####################################################################################################

# link in-situ archive
[group('link')]
@link:
  source .just/link.sh

####################################################################################################

# compile roadmap action items
[group('dev')]
@todor:
  sed -i '' '/^==================================================$/,/^==================================================$/d' ROADMAP.txt
  { printf '==================================================\n'; rg --color=never '; TODO' src/; printf '==================================================\n'; } >> ROADMAP.txt

####################################################################################################
