; browser
{:des "Browser vimium mappings"
 :rules
 [;
  [:#Pright_shift :right_shift [:browser] {:alone [:!Of1]}]                    ; focus             ;

  [:!EWQ#Pright_command :!Tf1 [:browser]]                                      ; down link         ;
  [:!EWQ#Pright_option :!Cf1 [:browser]]                                       ; copy link         ;

  [:!EWQ#Preturn_or_enter :!OTCf1 [:browser]]                                  ; current tab       ;

  [:!EWQ#Pright_shift :!OTf1 [:browser]]                                       ; new tab           ;
  [:!EWQ#Pspacebar :!TCf1 [:browser]]                                          ; new tab & go      ;
  [:!EWQ#Pdelete_or_backspace :!OCf1 [:browser]]                               ; multitab          ;
  ]}

